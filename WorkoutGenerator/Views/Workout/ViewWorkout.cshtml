@model WorkoutGenerator.ViewModels.ViewWorkoutViewModel

@{ ViewBag.Title = Model.Workout.Name;

}

<h3>@Model.Workout.Name</h3>

<ul>
    @foreach (var exerciseWorkout in Model.Exercises)
    {
        <li>@exerciseWorkout.Exercise.Name</li>
    }
</ul>

@if (Model.Exercises.Count == 0)
{
    <p><i>No Workout Exercises</i></p>
}

<p><a asp-controller="Workout" asp-action="AddExercise" asp-route-id="@Model.Workout.WorkoutID">Add Exercise</a></p>


